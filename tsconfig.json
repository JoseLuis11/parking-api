{
  "compilerOptions": {
    "target": "es2021",
    "module": "esnext",
    "lib": ["es2021"],
    "allowJs": true,
    "outDir": "build",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "experimentalDecorators": true
  },
  "ts-node": {
    "esm": true,
  },
  "exclude": [
    "node_modules",
    "sequelize",
    "build"
  ]
}
